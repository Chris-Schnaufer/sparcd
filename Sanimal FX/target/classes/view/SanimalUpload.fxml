<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<SplitPane fx:id="spnMain" dividerPositions="0.33, 0.66" prefHeight="500" prefWidth="1000" xmlns="http://javafx.com/javafx/8.0.121"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SanimalUploadController">
    <stylesheets>
        <URL value="@SanimalUpload.css"/>
    </stylesheets>
    <items>
        <VBox SplitPane.resizableWithParent="false">
            <Label alignment="CENTER" text="My Collections" prefWidth="Infinity" textAlignment="CENTER">
                <font>
                    <Font size="20.0"/>
                </font>
                <VBox.margin>
                    <Insets top="10" bottom="10" left="10" right="10"/>
                </VBox.margin>
            </Label>
            <ListView fx:id="collectionListView" styleClass="collectionLvw" VBox.vgrow="ALWAYS"/>
            <FlowPane alignment="CENTER" hgap="5" vgap="10">
                <padding>
                    <Insets bottom="20" left="5" right="5" top="20"/>
                </padding>
                <Button fx:id="btnNewCollection" onAction="#newCollectionPressed" styleClass="newCollectionBtn" text="New Collection"/>
                <Button fx:id="btnDeleteCollection" onAction="#deleteCollectionPressed" styleClass="deleteCollectionBtn" text="Delete Collection"/>
            </FlowPane>
        </VBox>
        <SplitPane fx:id="spnUploadSave" orientation="VERTICAL" dividerPositions="0.5">
            <StackPane>
                <VBox fx:id="vbxUpload">
                    <Label alignment="CENTER" text="Items to Upload" prefWidth="Infinity" textAlignment="CENTER">
                        <font>
                            <Font size="20.0"/>
                        </font>
                        <VBox.margin>
                            <Insets top="10" bottom="10" left="10" right="10"/>
                        </VBox.margin>
                    </Label>
                    <ListView fx:id="lstItemsToUpload" VBox.vgrow="ALWAYS"/>
                    <FlowPane alignment="CENTER" hgap="5" vgap="10" SplitPane.resizableWithParent="false">
                        <padding>
                            <Insets bottom="20" left="5" right="5" top="20"/>
                        </padding>
                        <Button fx:id="btnUpload" onAction="#uploadImages" styleClass="uploadBtn" text="Upload to Collection"/>
                    </FlowPane>
                </VBox>
                <VBox pickOnBounds="false" StackPane.alignment="CENTER" alignment="CENTER" spacing="5">
                    <Label fx:id="lblCantUpload" pickOnBounds="false" text="You cannot upload to this collection.">
                        <font>
                            <Font size="20.0"/>
                        </font>
                    </Label>
                    <Label fx:id="lblNoImagesToUpload" pickOnBounds="false" text="Import images in the import tab to upload.">
                        <font>
                            <Font size="20.0"/>
                        </font>
                    </Label>
                </VBox>
            </StackPane>
            <StackPane>
                <VBox fx:id="vbxSave">
                    <Label alignment="CENTER" text="Items to Save/Re-Upload" prefWidth="Infinity" textAlignment="CENTER">
                        <font>
                            <Font size="20.0"/>
                        </font>
                        <VBox.margin>
                            <Insets top="10" bottom="10" left="10" right="10"/>
                        </VBox.margin>
                    </Label>
                    <ListView fx:id="lstItemsToSave" VBox.vgrow="ALWAYS"/>
                    <FlowPane alignment="CENTER" hgap="5" vgap="10" SplitPane.resizableWithParent="false">
                        <padding>
                            <Insets bottom="20" left="5" right="5" top="20"/>
                        </padding>
                        <Button fx:id="btnSave" onAction="#saveImages" styleClass="saveBtn" text="Save to Collection"/>
                    </FlowPane>
                </VBox>
                <VBox pickOnBounds="false" StackPane.alignment="CENTER" alignment="CENTER" spacing="5">
                    <Label fx:id="lblCantSave" pickOnBounds="false" text="You cannot save to this collection.">
                        <font>
                            <Font size="20.0"/>
                        </font>
                    </Label>
                    <Label fx:id="lblNoImagesToSave" pickOnBounds="false" text="Download images on the right to update and save.">
                        <font>
                            <Font size="20.0"/>
                        </font>
                    </Label>
                </VBox>
            </StackPane>
        </SplitPane>
        <StackPane>
            <VBox fx:id="vbxDownloadList">
                <Label alignment="CENTER" text="Items to Download" prefWidth="Infinity" textAlignment="CENTER">
                    <font>
                        <Font size="20.0"/>
                    </font>
                    <VBox.margin>
                        <Insets top="10" bottom="10" left="10" right="10"/>
                    </VBox.margin>
                </Label>
                <ListView fx:id="uploadListDownloadListView" styleClass="uploadDownloadLvw" VBox.vgrow="ALWAYS"/>
                <FlowPane alignment="CENTER" hgap="5" vgap="10">
                    <padding>
                        <Insets bottom="20" left="5" right="5" top="20"/>
                    </padding>
                    <Button fx:id="btnDownload" onAction="#newDownloadPressed" styleClass="downloadBtn" text="Download to Edit"/>
                </FlowPane>
            </VBox>
            <VBox fx:id="vbxLoadingCollection" pickOnBounds="false" StackPane.alignment="CENTER" alignment="CENTER" spacing="5">
                <Label fx:id="lblStatus" pickOnBounds="false" text="Loading collection uploads...">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </Label>
                <ImageView fitWidth="100" fitHeight="100">
                    <image>
                        <Image url="@../images/uploadWindow/loading.gif"/>
                    </image>
                </ImageView>
            </VBox>
        </StackPane>
    </items>
</SplitPane>
