        <URL value="@SpeciesEntryListEntry.css" />
    </stylesheets>
    <padding>
        <Insets bottom="5" left="5" right="5" top="5" />
    </padding>
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS" />
        <ColumnConstraints hgrow="NEVER" maxWidth="80" minWidth="80" />
        <ColumnConstraints hgrow="NEVER" maxWidth="50" minWidth="50" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
        <Label fx:id="lblName" alignment="CENTER_LEFT" styleClass="font18" text="Name" HBox.hgrow="ALWAYS" />
        <TextField fx:id="txtCount" maxHeight="50" maxWidth="80" minHeight="50" minWidth="80" styleClass="font18" GridPane.columnIndex="1" />
        <Button fx:id="btnRemove" alignment="CENTER_RIGHT" maxHeight="50" maxWidth="50" minHeight="50" minWidth="50" styleClass="removeBtnBackground" GridPane.columnIndex="2" />
    </children>
</GridPane>
