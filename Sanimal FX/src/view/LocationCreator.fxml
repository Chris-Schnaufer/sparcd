<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane minHeight="150" minWidth="340" prefHeight="150.0" prefWidth="340.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LocationCreatorController">
    <stylesheets>
        <URL value="@LocationCreator.css" />
    </stylesheets>
    <padding>
        <Insets bottom="0" left="5" right="5" top="0" />
    </padding>
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="110.0" minWidth="110.0" prefWidth="110.0" />
        <ColumnConstraints hgrow="SOMETIMES" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="30" minHeight="30.0" prefHeight="30.0" />
        <RowConstraints maxHeight="30" minHeight="30.0" prefHeight="30.0" />
        <RowConstraints maxHeight="30" minHeight="30.0" prefHeight="30.0" />
        <RowConstraints maxHeight="30" minHeight="30.0" prefHeight="30.0" />
        <RowConstraints maxHeight="30" minHeight="30.0" prefHeight="30.0" />
    </rowConstraints>
   <children>
      <Label text="Name: " />
      <Label text="Latitude (+/-85): " GridPane.rowIndex="1" />
      <Label text="Longitude (+/-180): " GridPane.rowIndex="2" />
      <Label text="Elevation: " GridPane.rowIndex="3" />
      <TextField fx:id="txtName" GridPane.columnIndex="1" />
      <TextField fx:id="txtLatitude" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <TextField fx:id="txtLongitude" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <TextField fx:id="txtElevation" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <HBox prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="4" alignment="CENTER_RIGHT">
          <padding>
              <Insets bottom="0" left="5" right="5" top="0" />
          </padding>
          <children>
              <Button mnemonicParsing="false" text="Confirm" onAction="#confirmPressed" />
              <Button mnemonicParsing="false" text="Cancel" onAction="#cancelPressed"/>
          </children>
      </HBox>
   </children>
</GridPane>
