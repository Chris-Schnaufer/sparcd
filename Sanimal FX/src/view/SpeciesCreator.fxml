<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:id="gridBackground" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SpeciesCreatorController">
    <stylesheets>
        <URL value="@SpeciesCreator.css" />
    </stylesheets>
    <padding>
        <Insets left="5" right="5" />
    </padding>
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="165.0" minWidth="10.0" prefWidth="133.0" />
        <ColumnConstraints hgrow="SOMETIMES" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="35" minHeight="35.0"/>
        <RowConstraints maxHeight="35" minHeight="35.0"/>
        <RowConstraints maxHeight="35" minHeight="35.0"/>
        <RowConstraints maxHeight="35" minHeight="35.0"/>
        <RowConstraints maxHeight="35" minHeight="35.0"/>
        <RowConstraints maxHeight="35" minHeight="35.0"/>
    </rowConstraints>
    <children>
        <Label text="Species Name: " GridPane.rowIndex="0" />
        <Label text="Species Scientific Name: " GridPane.rowIndex="1" />
        <Label text="Please select a species Icon/Image from: " GridPane.columnSpan="2" GridPane.rowIndex="2" />
        <TextField fx:id="txtName" GridPane.columnIndex="1" />
        <TextField fx:id="txtScientificName" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Label text="    - Your Computer: " GridPane.rowIndex="3" />
        <Label text="    - OR an Internet URL: "  GridPane.rowIndex="4" />
        <TextField fx:id="txtImageURL" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
            <children>
                <Button mnemonicParsing="false" onAction="#grabFileName" text="Browse" />
                <Label fx:id="lblFileName" HBox.hgrow="ALWAYS">
                    <padding>
                        <Insets left="5" right="5" />
                    </padding>
                </Label>
            </children>
        </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="5" alignment="CENTER_RIGHT">
          <padding>
              <Insets left="5" right="5" />
          </padding>
          <children>
              <Button mnemonicParsing="false" text="Confirm" onAction="#confirmPressed" />
              <Button mnemonicParsing="false" text="Cancel" onAction="#cancelPressed"/>
          </children>
      </HBox>
    </children>
</GridPane>
