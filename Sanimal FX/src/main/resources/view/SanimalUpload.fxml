<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.TextArea?>
<SplitPane fx:id="mainSplitPane" dividerPositions="0.5" minHeight="600" minWidth="600" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SanimalUploadController">
    <stylesheets>
        <URL value="@SanimalUpload.css" />
    </stylesheets>
    <items>
        <VBox SplitPane.resizableWithParent="false">
            <ListView fx:id="collectionListView" VBox.vgrow="ALWAYS" />
            <FlowPane alignment="CENTER" hgap="5" vgap="10">
                <padding>
                    <Insets bottom="20" left="5" right="5" top="20" />
                </padding>
                <Button onAction="#newCollectionPressed" styleClass="newCollectionBtn" text="New Collection" />
                <Button onAction="#deleteCollectionPressed" styleClass="deleteCollectionBtn" text="Delete Collection" />
            </FlowPane>
        </VBox>
        <SplitPane dividerPositions=".18, .89" orientation="VERTICAL">
            <GridPane hgap="5" vgap="5" SplitPane.resizableWithParent="false">
                <columnConstraints>
                    <ColumnConstraints maxWidth="100" minWidth="100" />
                    <ColumnConstraints hgrow="ALWAYS" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints vgrow="NEVER" />
                    <RowConstraints vgrow="NEVER" />
                    <RowConstraints vgrow="NEVER" />
                    <RowConstraints vgrow="ALWAYS" />
                </rowConstraints>
                <padding>
                    <Insets bottom="10" left="10" right="10" top="10" />
                </padding>
                <children>
                    <Label text="Name:" />
                    <TextField fx:id="txtName" GridPane.columnIndex="1" />
                    <Label text="Organization:" GridPane.rowIndex="1" />
                    <TextField fx:id="txtOrganization" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    <Label text="Contact Info: " GridPane.rowIndex="2"/>
                    <TextField fx:id="txtContactInfo" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                    <Label text="Desciption: " GridPane.rowIndex="3"/>
                    <TextArea fx:id="tbxDescription" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                </children>
            </GridPane>
            <TableView fx:id="tvwPermissions">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <columns>
                    <TableColumn fx:id="clmUser" text="User" />
                    <TableColumn fx:id="clmUpload" text="Upload"   minWidth="70" maxWidth="70"/>
                    <TableColumn fx:id="clmOwner" text="Administrator"   minWidth="130" maxWidth="130"/>
                </columns>
            </TableView>
            <FlowPane alignment="CENTER" hgap="5" vgap="10" SplitPane.resizableWithParent="false">
                <Button fx:id="btnAddUser" onAction="#addNewUser" text="Add User" />
                <Button fx:id="btnSave" onAction="#savePermissions" text="Save Permissions"/>
                <Button fx:id="btnRemoveUser" onAction="#removeCurrentUser" text="Remove User" />
            </FlowPane>
        </SplitPane>
    </items>
</SplitPane>
