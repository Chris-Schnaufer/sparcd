<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.SegmentedButton?>
<?import java.net.URL?>
<GridPane minHeight="315" minWidth="450" maxHeight="315" maxWidth="450.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="controller.importView.LocationCreatorController">
    <stylesheets>
        <URL value="@LocationCreator.css"/>
    </stylesheets>
    <padding>
        <Insets left="5" right="5"/>
    </padding>
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="180.0" minWidth="180.0"/>
        <ColumnConstraints hgrow="SOMETIMES"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="35" minHeight="35.0" />
        <RowConstraints maxHeight="35" minHeight="35.0" />
        <RowConstraints maxHeight="35" minHeight="35.0" />
        <RowConstraints maxHeight="140" minHeight="140.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="35" minHeight="35.0" />
        <RowConstraints maxHeight="35" minHeight="35.0" />
    </rowConstraints>
    <children>
        <Label text="Name: "/>
        <TextField fx:id="txtName" GridPane.columnIndex="1"/>
        <Label text="Location Id: " GridPane.rowIndex="1"/>
        <TextField fx:id="txtId" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Label text="Location Type: " GridPane.rowIndex="2"/>
        <HBox alignment="CENTER_LEFT" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <RadioButton fx:id="rbnLatLng" selected="true" text="Lat/Lng">
                <toggleGroup>
                    <ToggleGroup fx:id="locTypeBtnGroup"/>
                </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="rbnUTM" text="UTM" toggleGroup="$locTypeBtnGroup"/>
        </HBox>
        <StackPane GridPane.columnSpan="2" GridPane.rowIndex="3">
            <GridPane fx:id="pneLatLng">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="180.0" minWidth="180.0" prefWidth="180.0"/>
                    <ColumnConstraints hgrow="SOMETIMES"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints maxHeight="35" minHeight="35.0"/>
                    <RowConstraints maxHeight="35" minHeight="35.0"/>
                </rowConstraints>
                <children>
                    <Label text="Latitude (+/-85): " GridPane.rowIndex="0"/>
                    <Label text="Longitude (+/-180): " GridPane.rowIndex="1"/>
                    <TextField fx:id="txtLatitude" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    <TextField fx:id="txtLongitude" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                </children>
            </GridPane>
            <GridPane fx:id="pneUTM">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="180.0" minWidth="180.0" prefWidth="180.0"/>
                    <ColumnConstraints hgrow="SOMETIMES"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints maxHeight="35" minHeight="35.0"/>
                    <RowConstraints maxHeight="35" minHeight="35.0"/>
                    <RowConstraints maxHeight="35" minHeight="35.0"/>
                    <RowConstraints maxHeight="35" minHeight="35.0"/>
                </rowConstraints>
                <children>
                    <Label text="Zone (1-60): " GridPane.rowIndex="0"/>
                    <Label text="Letter (C-X excluding I and O): " GridPane.rowIndex="1"/>
                    <Label text="Easting (0m-1000000m): " GridPane.rowIndex="2"/>
                    <Label text="Northing (0m to 10000000m): " GridPane.rowIndex="3"/>
                    <TextField fx:id="txtZone" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    <TextField fx:id="txtLetter" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    <TextField fx:id="txtEasting" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    <TextField fx:id="txtNorthing" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                </children>
            </GridPane>
        </StackPane>
        <Label text="Elevation: " GridPane.rowIndex="4"/>
        <HBox alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="4">
            <children>
                <TextField fx:id="txtElevation" HBox.hgrow="ALWAYS"/>
                <SegmentedButton fx:id="sbnUnits" HBox.hgrow="NEVER">
                    <buttons>
                        <ToggleButton fx:id="tbnFeet" mnemonicParsing="false" text="ft"/>
                        <ToggleButton fx:id="tbnMeters" selected="true" mnemonicParsing="false" text="m"/>
                    </buttons>
                </SegmentedButton>
            </children>
        </HBox>
        <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="5">
            <children>
                <Button fx:id="btnConfirm" mnemonicParsing="false" onAction="#confirmPressed" text="Confirm"/>
                <Button mnemonicParsing="false" onAction="#cancelPressed" text="Cancel"/>
            </children>
        </HBox>
    </children>
</GridPane>
