<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.Font?>
<VBox styleClass="locationBackground" fx:id="mainPane" spacing="3" minHeight="120" maxHeight="120" prefHeight="120" prefWidth="120" minWidth="120" maxWidth="120"
      alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.importView.LocationListEntryController">
    <stylesheets>
        <URL value="@LocationListEntry.css"/>
    </stylesheets>
    <padding>
        <Insets bottom="5" left="5" right="5" top="5"/>
    </padding>
    <fx:define>
        <Tooltip fx:id="primaryTooltip" text="${controller.item}" style="-fx-font-size: 16px">
            <graphic>
                <ImageView>
                    <Image url="@../../images/importWindow/worldIcon.png"/>
                </ImageView>
            </graphic>
        </Tooltip>
    </fx:define>
    <children>
        <Label fx:id="lblName" styleClass="largeBold" wrapText="true" text="Name" tooltip="$primaryTooltip"/>
        <Label fx:id="lblId" styleClass="mediumItalic" text="Id" tooltip="$primaryTooltip"/>
        <Label fx:id="lblLocationLat" text="Lat/Lng" tooltip="$primaryTooltip"/>
        <Label fx:id="lblLocationLng" text="Lat/Lng" tooltip="$primaryTooltip"/>
        <!-- <Label fx:id="lblElevation" text="Elevation" tooltip="$primaryTooltip"/> -->
    </children>
</VBox>
