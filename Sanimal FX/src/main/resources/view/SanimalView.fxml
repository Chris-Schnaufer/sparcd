<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane prefHeight="300.0" prefWidth="524.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.SanimalViewController">
    <stylesheets>
        <URL value="@SanimalView.css"/>
    </stylesheets>
    <children>
        <ImageView pickOnBounds="true" preserveRatio="false" scaleX="1.03" scaleY="1.05">
            <image>
                <Image url="@../images/mainMenu/sanimalBackground.JPG"/>
            </image>
        </ImageView>
        <ImageView fitHeight="161.0" fitWidth="405.0" layoutX="14.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../images/mainMenu/sanimalTitle.png"/>
            </image>
        </ImageView>
        <GridPane layoutX="20.0" layoutY="120.0" vgap="3">
            <columnConstraints>
                <ColumnConstraints maxWidth="156" minWidth="156" />
                <ColumnConstraints maxWidth="Infinity" hgrow="ALWAYS"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
            </rowConstraints>
            <children>
                <Button fx:id="btnImport" minWidth="150" onAction="#importPressed" styleClass="importBtn" text="Import" textAlignment="CENTER"
                        GridPane.rowIndex="0"/>
                <Button fx:id="btnAnalyze" minWidth="150" onAction="#analyzePressed" styleClass="analyzeBtn" text="Analyze" textAlignment="CENTER"
                        GridPane.rowIndex="1"/>
                <Button fx:id="btnMap" minWidth="150" onAction="#mapPressed" styleClass="mapBtn" text="Map" textAlignment="CENTER" GridPane.rowIndex="2"/>
                <Button fx:id="btnLogin" minWidth="150" onAction="#loginPressed" styleClass="loginBtn" text="Login" textAlignment="CENTER"
                        GridPane.rowIndex="3"/>
                <Label GridPane.hgrow="ALWAYS" fx:id="lblUsername" styleClass="usernameLbl" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                <Button fx:id="btnExit" minWidth="150" onAction="#exitPressed" styleClass="exitBtn" text="Exit" textAlignment="CENTER" GridPane.rowIndex="4"/>
            </children>
        </GridPane>
    </children>
</AnchorPane>
